extends layout

block content
    .post
        h2.post-title
            a(href='/post/#{data.link}')= data.title
        .post-tags
            for tag in data.tags
                a(href='/tag/#{tag}')= tag
        .post-date= data.date.toLocaleString()
        if metadata.user
            .post-func
                a(href='/edit/#{data.link}') 编辑
                a#post-hide(data='/hide/#{data.link}', href='javascript:;') 删除
        .post-content!= data.content
        
    if metadata.user
        script
            | document.getElementById('post-hide').addEventListener('click', function(){
            |     if(confirm('确定要删除吗？')){
            |         window.location = event.target.getAttribute('data');
            |     } 
            | });