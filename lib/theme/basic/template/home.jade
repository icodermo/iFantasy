extends layout

block content
    for post in iFantasy.data.docs
        .post
            h2.post-title
                a(href='/post/#{post.link}')= post.title
            .post-date= post.date.toLocaleString()
            .post-content!= post.brief
            .post-tags
                for tag in post.tags
                    a(href='/tag/#{tag}')= tag

    .pager
        - for(var i=1; i<iFantasy.data.pager.pageNum+1; i++)
            if i === iFantasy.data.pager.cpage
                span= i
            else
                a(href='/?p=#{i}')= i