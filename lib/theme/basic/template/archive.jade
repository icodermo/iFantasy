extends layout

block content
    .post
        - var lastYear = 0;
        for post, index in iFantasy.data.docs
            if lastYear != post.date.getFullYear()
                if index != 0
                    | </ul></div>
                - lastYear = post.date.getFullYear();
                | <div class="post-archive">
                h2= lastYear
                | <ul>
                li
                    span.date= extend.dateFormat('yyyy-MM-dd', post.date)
                    a(href='/post/#{post.link}')= post.title
            else
                li
                    span.date= extend.dateFormat('yyyy-MM-dd', post.date)
                    a(href='/post/#{post.link}')= post.title
        if iFantasy.data.docs.length != 0
            | </ul></div>